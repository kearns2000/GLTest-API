@model GLTest.Client.Models.Company
@{
    ViewData["Title"] = "Create Company";
}

<div class="container mt-4">
    <h1 class="text-center mb-4">Create a New Company</h1>

    @if (!string.IsNullOrEmpty(ViewBag.Error))
    {
        <div class="alert alert-danger text-center" role="alert">
            <strong>Error:</strong> @ViewBag.Error
        </div>
    }

    <form asp-action="Create" method="post">
        @Html.AntiForgeryToken()
        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="Name" class="form-label">Company Name</label>
                <input asp-for="Name" class="form-control" required>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="Exchange" class="form-label">Exchange</label>
                <input asp-for="Exchange" class="form-control" required>
                <span asp-validation-for="Exchange" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="Ticker" class="form-label">Ticker</label>
                <input asp-for="Ticker" class="form-control" required>
                <span asp-validation-for="Ticker" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="Isin" class="form-label">ISIN</label>
                <input asp-for="Isin" class="form-control" required pattern="^[A-Z]{2}[A-Z0-9]{10}$"
                       title="ISIN must start with 2 uppercase letters followed by 10 alphanumeric characters.">
                <span asp-validation-for="Isin" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="Website" class="form-label">Website</label>
                <input asp-for="Website" class="form-control">
                <span asp-validation-for="Website" class="text-danger"></span>
            </div>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-success">Create Company</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
